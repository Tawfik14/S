{% extends 'base.html.twig' %}
{% block title %}Dashboard admin{% endblock %}

{% block body %}
<section class="max-w-5xl mx-auto space-y-6">
  <div class="rounded-2xl bg-neutral-900 ring-1 ring-white/10 p-6 sm:p-8">
    <h1 class="text-2xl font-bold">Dashboard admin</h1>
    <p class="mt-1 text-neutral-400 text-sm">Espace d’administration.</p>
  </div>

  <div class="grid gap-6 sm:grid-cols-2">
    <a href="{{ path('app_admin_media') }}" class="group rounded-2xl bg-neutral-900 ring-1 ring-white/10 p-6 hover:ring-rose-400/40 transition">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold">Films / Séries</h2>
        <span class="text-rose-400">→</span>
      </div>
      <p class="mt-2 text-neutral-400 text-sm">Lister, ajouter, éditer, fournir trailer/synopsis/date de sortie.</p>
    </a>

    <a href="{{ path('app_admin_quiz') }}" class="group rounded-2xl bg-neutral-900 ring-1 ring-white/10 p-6 hover:ring-rose-400/40 transition">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold">Quiz</h2>
        <span class="text-rose-400">→</span>
      </div>
      <p class="mt-2 text-neutral-400 text-sm">Créer et gérer des quiz (à venir).</p>
    </a>
  </div>
</section>
{% endblock %}


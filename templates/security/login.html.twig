{% extends 'base.html.twig' %}
{% block title %}Connexion — MovieNight{% endblock %}

{% block body %}
  <section class="max-w-lg mx-auto">
    <div class="rounded-2xl bg-neutral-900 ring-1 ring-white/10 overflow-hidden">
      <div class="px-6 py-6 sm:px-8 sm:py-8">
        <h1 class="text-2xl font-bold">Connexion</h1>
        <p class="mt-1 text-neutral-400 text-sm">Accédez à votre espace MovieNight.</p>

        {% if error %}
          <div class="mt-4 rounded-lg bg-red-500/10 text-red-200 px-4 py-2 text-sm">
            Identifiants invalides.
          </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}" class="mt-6 space-y-4">
          <div>
            <label for="email" class="block text-sm text-neutral-300 mb-1">Email</label>
            <div class="relative">
              <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-neutral-500">
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16v16H4z"/><path d="m22 6-10 7L2 6"/></svg>
              </span>
              <input id="email" name="email" type="email" value="{{ last_email|default('') }}"
                     class="w-full pl-9 pr-3 py-2 rounded-lg bg-neutral-800 border border-white/10 focus:outline-none focus:ring-2 focus:ring-rose-500" autocomplete="email" required>
            </div>
          </div>

          <div>
            <label for="password" class="block text-sm text-neutral-300 mb-1">Mot de passe</label>
            <div class="relative">
              <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-neutral-500">
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
              </span>
              <input id="password" name="password" type="password"
                     class="w-full pl-9 pr-3 py-2 rounded-lg bg-neutral-800 border border-white/10 focus:outline-none focus:ring-2 focus:ring-rose-500" autocomplete="current-password" required>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <label class="inline-flex items-center gap-2 text-sm text-neutral-300">
              <input type="checkbox" name="_remember_me" class="rounded bg-neutral-800 border-white/10">
              Se souvenir de moi
            </label>
            <a class="text-sm text-neutral-400 hover:text-neutral-200" href="#">Mot de passe oublié ?</a>
          </div>

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

          <button type="submit" class="w-full inline-flex items-center justify-center rounded-lg bg-rose-600 hover:bg-rose-500 px-4 py-2 font-medium">
            Se connecter
          </button>
        </form>

        <p class="mt-4 text-sm text-neutral-400">
          Pas de compte ?
          <a href="{{ path('app_register') }}" class="text-rose-400 hover:text-rose-300">Créer un compte</a>
        </p>
      </div>
    </div>
  </section>
{% endblock %}


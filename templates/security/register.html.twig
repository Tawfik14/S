{% extends 'base.html.twig' %}
{% block title %}Inscription — MovieNight{% endblock %}

{% block body %}
  <section class="max-w-lg mx-auto">
    <div class="rounded-2xl bg-neutral-900 ring-1 ring-white/10 overflow-hidden">
      <div class="px-6 py-6 sm:px-8 sm:py-8">
        <h1 class="text-2xl font-bold">Créer un compte</h1>
        <p class="mt-1 text-neutral-400 text-sm">Rejoignez MovieNight pour sauvegarder vos films favoris.</p>

        {% for message in app.flashes('success') %}
          <div class="mt-4 rounded-lg bg-emerald-500/10 text-emerald-200 px-4 py-2 text-sm">{{ message }}</div>
        {% endfor %}

        <div class="mt-6">
          {{ form_start(registrationForm) }}
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'block text-sm text-neutral-300 mb-1'}}) }}
                <div class="relative">
                  <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-neutral-500">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 7a4 4 0 1 1-8 0 4 4 0 0 1 8 0"/><path d="M12 14a7 7 0 0 0-7 7h14a7 7 0 0 0-7-7"/></svg>
                  </span>
                  {{ form_widget(registrationForm.firstName, {'attr': {'class': 'w-full pl-9 pr-3 py-2 rounded-lg bg-neutral-800 border border-white/10 focus:outline-none focus:ring-2 focus:ring-rose-500'}}) }}
                </div>
                {{ form_errors(registrationForm.firstName) }}
              </div>

              <div>
                {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'block text-sm text-neutral-300 mb-1'}}) }}
                <div class="relative">
                  <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-neutral-500">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 7a4 4 0 1 1-8 0 4 4 0 0 1 8 0"/><path d="M12 14a7 7 0 0 0-7 7h14a7 7 0 0 0-7-7"/></svg>
                  </span>
                  {{ form_widget(registrationForm.lastName, {'attr': {'class': 'w-full pl-9 pr-3 py-2 rounded-lg bg-neutral-800 border border-white/10 focus:outline-none focus:ring-2 focus:ring-rose-500'}}) }}
                </div>
                {{ form_errors(registrationForm.lastName) }}
              </div>

              <div class="sm:col-span-2">
                {{ form_label(registrationForm.birthDate, null, {'label_attr': {'class': 'block text-sm text-neutral-300 mb-1'}}) }}
                <div class="relative">
                  <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-neutral-500">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2"/><path d="M16 2v4M8 2v4M3 10h18"/></svg>
                  </span>
                  {{ form_widget(registrationForm.birthDate, {'attr': {'class': 'w-full pl-9 pr-3 py-2 rounded-lg bg-neutral-800 border border-white/10 focus:outline-none focus:ring-2 focus:ring-rose-500'}}) }}
                </div>
                {{ form_errors(registrationForm.birthDate) }}
              </div>

              <div class="sm:col-span-2">
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm text-neutral-300 mb-1'}}) }}
                <div class="relative">
                  <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-neutral-500">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16v16H4z"/><path d="m22 6-10 7L2 6"/></svg>
                  </span>
                  {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full pl-9 pr-3 py-2 rounded-lg bg-neutral-800 border border-white/10 focus:outline-none focus:ring-2 focus:ring-rose-500'}}) }}
                </div>
                {{ form_errors(registrationForm.email) }}
              </div>

              <div class="sm:col-span-2">
                {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'block text-sm text-neutral-300 mb-1'}}) }}
                <div class="relative">
                  <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-neutral-500">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                  </span>
                  {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full pl-9 pr-3 py-2 rounded-lg bg-neutral-800 border border-white/10 focus:outline-none focus:ring-2 focus:ring-rose-500'}}) }}
                </div>
                {{ form_errors(registrationForm.plainPassword) }}
              </div>
            </div>

            <div class="mt-6">
              {{ form_widget(registrationForm.submit) }}
            </div>
          {{ form_end(registrationForm) }}

          <p class="mt-4 text-sm text-neutral-400">
            Déjà inscrit ?
            <a href="{{ path('app_login') }}" class="text-rose-400 hover:text-rose-300">Se connecter</a>
          </p>
        </div>
      </div>
    </div>
  </section>
{% endblock %}


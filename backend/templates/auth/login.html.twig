{% extends 'base.html.twig' %}
{% block title %}Connexion · CinéHub{% endblock %}
{% block body %}
<section class="auth">
  <h1>Connexion</h1>
  {% if error %}
    <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
  <form method="post" action="{{ path('app_login') }}" class="form">
    <label>
      Nom d'utilisateur
      <input name="_username" value="{{ last_username }}" required />
    </label>
    <label>
      Mot de passe
      <input name="_password" type="password" required />
    </label>
    <button type="submit">Se connecter</button>
  </form>
</section>
{% endblock %}
<section>
  <h1>Films</h1>
  <div class="grid">
    <% movies.forEach(function(movie){ %>
      <a class="card" href="/movies/<%= movie.id %>">
        <div class="poster">
          <% if (movie.poster_path) { %>
            <img src="<%= movie.poster_path %>" alt="Poster de <%= movie.title %>">
          <% } else { %>
            <div class="placeholder">Aucun poster</div>
          <% } %>
        </div>
        <div class="card-body">
          <h2><%= movie.title %></h2>
        </div>
      </a>
    <% }) %>
  </div>
</section>
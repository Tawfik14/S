<section class="movie-detail">
  <div class="detail-header">
    <div class="poster-lg">
      <% if (movie.poster_path) { %>
        <img src="<%= movie.poster_path %>" alt="Poster de <%= movie.title %>">
      <% } %>
    </div>
    <div>
      <h1><%= movie.title %></h1>
      <% if (movie.actors_text) { %>
        <p><strong>Acteurs</strong>: <%= movie.actors_text %></p>
      <% } %>
    </div>
  </div>

  <% if (movie.video_url) { %>
    <div class="video-wrapper">
      <iframe width="100%" height="480" src="<%= movie.video_url %>" title="Bande-annonce de <%= movie.title %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
  <% } %>

  <% if (movie.synopsis) { %>
    <article class="synopsis">
      <h2>Synopsis</h2>
      <p><%= movie.synopsis %></p>
    </article>
  <% } %>
</section>
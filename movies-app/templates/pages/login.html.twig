{% extends 'base.html.twig' %}

{% block title %}Connexion — MovieNight{% endblock %}

{% block body %}
  <section class="max-w-md rounded-2xl bg-neutral-900 ring-1 ring-white/10 p-8">
    <h1 class="text-2xl font-bold mb-4">Connexion</h1>
    <form class="space-y-4">
      <div>
        <label class="block text-sm text-neutral-400 mb-1">Email</label>
        <input type="email" class="w-full rounded-lg bg-neutral-800 border border-white/10 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500" placeholder="vous@exemple.com">
      </div>
      <div>
        <label class="block text-sm text-neutral-400 mb-1">Mot de passe</label>
        <input type="password" class="w-full rounded-lg bg-neutral-800 border border-white/10 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500" placeholder="••••••••">
      </div>
      <button type="submit" class="inline-flex items-center justify-center rounded-lg bg-rose-600 hover:bg-rose-500 px-4 py-2 font-medium">Se connecter</button>
    </form>
  </section>
{% endblock %}
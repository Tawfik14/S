{% extends 'base.html.twig' %}

{% block title %}Films — MovieNight{% endblock %}

{% block body %}
  <section class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-neutral-800 to-neutral-900 p-8 ring-1 ring-white/10">
    <h1 class="text-3xl font-extrabold tracking-tight">Explorez les meilleurs films</h1>
    <p class="mt-2 text-neutral-400">Cliquez sur un film pour voir le synopsis et la bande‑annonce.</p>
  </section>

  <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {% for movie in movies %}
      <a href="{{ path('app_movies_show', { slug: movie.slug }) }}" class="group relative overflow-hidden rounded-xl bg-neutral-900 ring-1 ring-white/10 transition hover:ring-rose-400/40">
        <div class="aspect-[16/9] overflow-hidden">
          <img src="{{ movie.backdrop }}" alt="{{ movie.title }}" class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105">
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4">
          <div class="flex items-center gap-2 mb-1">
            <span class="inline-flex items-center text-amber-400 text-sm font-semibold">★ {{ movie.rating }}</span>
            <span class="text-neutral-400 text-sm">• {{ movie.year }}</span>
          </div>
          <h3 class="text-xl font-bold">{{ movie.title }}</h3>
          <div class="mt-1 text-xs text-neutral-300">
            {{ movie.genres|join(', ') }}
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
{% endblock %}